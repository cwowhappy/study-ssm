        <dependency.version.ehcache2>2.10.3</dependency.version.ehcache2>
        <dependency.version.ehcache3>3.2.0</dependency.version.ehcache3>
        <dependency.version.quartz>2.2.3</dependency.version.quartz>
        <dependency.version.hibernate-validator>5.4.1.Final</dependency.version.hibernate-validator>
        <dependency.version.logback>1.2.3</dependency.version.logback>
        <dependency.version.slf4j>1.7.25</dependency.version.slf4j>
        <dependency.version.jackson>2.8.8</dependency.version.jackson>
        <dependency.version.h2database>1.4.193</dependency.version.h2database>
        <dependency.version.mysql-connector>6.0.3</dependency.version.mysql-connector>
        <dependency.version.druid>1.0.26</dependency.version.druid>
        <dependency.version.spring>4.3.5.RELEASE</dependency.version.spring>
        <dependency.version.mybatis>3.4.1</dependency.version.mybatis>
        <dependency.version.mybatis-typehandlers-jsr310>1.0.2</dependency.version.mybatis-typehandlers-jsr310>
        <dependency.version.mybatis-spring>1.3.1</dependency.version.mybatis-spring>

        <plugin.version.war>3.0.0</plugin.version.war>
        <plugin.version.compiler>3.5.1</plugin.version.compiler>
        <plugin.version.jetty>9.3.14.v20161028</plugin.version.jetty>
